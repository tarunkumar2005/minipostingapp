<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Posts</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <div class="container mx-auto mt-8 p-4">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-bold text-gray-700 mb-4">Posts</h2>
      <div class="space-y-4">
        <!-- Post Item -->
        <% posts.forEach(post=> { %>
          <div class="border rounded-lg p-4">
            <div class="flex justify-between items-center mb-2">
              <div class="text-lg font-bold text-gray-700">@<%= post.user[0].username %>
              </div>
            </div>
            <p class="text-gray-600 mb-2">
              <%= post.content %>
            </p>
            <div class="flex space-x-2">
              <a href="/like/<%= post._id %>" class="px-2 py-1 text-sm bg-blue-500 text-white rounded">
                <%= post.likes.indexOf(user._id) === -1 ? 'Like' : 'Unlike' %>
              </a>
              <span class="px-2 py-1 text-sm bg-blue-500 text-white rounded">
                <%= post.likes.length %>
              </span>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>
</body>

</html>